// POST { from, to, amount } -> returns a mock unsigned payload
export default async function handler(req,res){
  if (req.method !== 'POST') return res.status(405).json({error:'Method not allowed'});
  try {
    const { from, to, amount } = req.body || {};
    if (!from || !to || !amount) return res.status(400).json({error:'missing fields'});
    // Create a mock payload string that the client would sign
    const payloadToSign = Buffer.from(JSON.stringify({ from,to,amount,ts: Date.now() })).toString('base64');
    return res.status(200).json({ unsignedTx: null, payloadToSign, note: 'MOCK unsigned payload - replace with real builder' });
  } catch (err) {
    console.error(err);
    res.status(500).json({ error: err.message });
  }
}
