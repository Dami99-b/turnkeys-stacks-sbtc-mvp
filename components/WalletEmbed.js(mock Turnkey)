import { showToast } from "./ToastRoot";

export default function WalletEmbed({ onConnected }) {
  function connectMock() {
    const a = "ST" + Math.random().toString(36).slice(2, 12).toUpperCase();
    showToast("ðŸ”— Mock wallet connected: " + a, "success");
    onConnected(a);
  }

  return (
    <div>
      <button className="btn" onClick={connectMock}>Connect (mock)</button>
      <div style={{marginTop:8,color:'#9aa4b2',fontSize:13}}>Mock embedded wallet (replace with Turnkey SDK to go live)</div>
    </div>
  );
}
